{
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableMessage": "always",
    "diagnostic.errorSign": "E",
    "diagnostic.hintSign": "H",
    "diagnostic.infoSign": "I",
    "diagnostic.warningSign": "W",

    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.autoTrigger": "always",
    "suggest.maxCompleteItemCount": 25,
    "suggest.minTriggerInputLength": 2,
    "suggest.timeout": 500,
    "suggest.triggerAfterInsertEnter": true,

    "python.analysis.diagnosticPublishDelay": 100,
    "python.analysis.symbolsHierarchyDepthLimit": 10,
    "python.linting.enabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": ["--config", "~/.config/flake8.cfg"],
    "python.linting.pylintArgs": ["--rcfile=~/.config/pylint.cfg"],
    "python.workspaceSymbols.rebuildOnFileSave": false,
    "python.workspaceSymbols.rebuildOnStart": true,

    "clangd.path": "/usr/local/opt/llvm/bin/clangd",
    "clangd.enabled": true,
    "clangd.disableDiagnostics": true,
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--pretty",
        "--limit-results=50"
    ],

    "languageserver": {

        "golang": {
            "command": "gopls",
            "rootPatterns": [".git/", "go.mod", ".vim"],
            "filetypes": ["go"],
            "disableWorkspaceFolders": true,
            "initializationOptions": {
                "usePlaceholders": true,
                "completeUnimported": true
            }
        }

    }

}

{
    "diagnostic.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.displayByAle": false,
    "diagnostic.refreshAfterSave": true,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.enableSign": true,
    "diagnostic.enableMessage": "always",
    "diagnostic.errorSign": "E",
    "diagnostic.hintSign": "H",
    "diagnostic.infoSign": "I",
    "diagnostic.warningSign": "W",

    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.autoTrigger": "always",
    "suggest.maxCompleteItemCount": 25,
    "suggest.minTriggerInputLength": 2,
    "suggest.timeout": 500,

    "pyright.enable": true,
    "python.analysis.stubPath": ".typings",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pytypeEnabled": true,
    "python.linting.mypyEnabled": false,
    "python.linting.flake8Args": ["--config", "/usr/local/share/flake8.cfg"],
    "python.linting.pylintArgs": ["--rcfile=~/.config/pylint.cfg"],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "120", "--quiet"],
    "python.workspaceSymbols.rebuildOnFileSave": false,
    "python.workspaceSymbols.rebuildOnStart": true,
    "python.analysis.diagnosticPublishDelay": 100,
    "python.analysis.symbolsHierarchyDepthLimit": 10,

    "clangd.enabled": true,
    "clangd.disableDiagnostics": false,
    "clangd.path": "/usr/local/opt/llvm/bin/clangd",
    "clangd.arguments": [
        "--limit-results=25",
        "--pch-storage=disk"
    ],

    "vetur.ignoreProjectWarning": true,

    "r.lsp.diagnostics": false,

    "go.enable": true,
    "go.disable": {
        "completion": false,
        "diagnostic": false,
        "workspaceFolders": false
    },
    "go.goplsOptions":{
        "deepCompletion": false
    }
}
